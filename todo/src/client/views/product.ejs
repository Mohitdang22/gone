<html>
  <head>
    <title>
      Product
    </title>
  </head>
  <body class="text-center">
    <table>
      <form method="post" action="/product">
        <tr>
          <td><label for="inputName">Name</label></td>
          <td>
            <input type="text" id="inputName" name="name" placeholder="Enter your name" required autofocus />
          </td>
        </tr>
        <tr>
          <td><label for="inputCost">Cost</label></td>
          <td>
            <input type="number" id="inputCost" name="cost" placeholder="Cost" required autofocus />
          </td>
        </tr>
        <tr>
          <td>
            <button class="btn btn-lg btn-primary btn-block" type="submit">
              Submit
            </button>
          </td>
        </tr>
      </form>
    </table>
  </body>
</html>
